<?xml version="1.0"?>
	<robot name="lynxmotion">
		
		<material name="blue">
			<color rgba="0 0 0.8 1"/>
		</material>
		
		<link name="base_link">
		<visual>
			<geometry>
				<cylinder length="0.4" radius="0.3"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 -0.25"/>
		</visual>
	</link>
	
	<link name="bottom_arm">
		<visual>
			<geometry>
				<box size="0.4 0.1 0.2"/>
			</geometry>
			<material name="blue"/>
			<origin rpy="0 1.57075 0" xyz="0 0 -0.25"/>
		</visual>
	</link>
	
	<link name="top_arm">
		<visual>
			<geometry>
				<box size="0.4 0.1 0.2"/>
			</geometry>
			<origin rpy="0 1.57075 0" xyz="0 0 0.2"/>
		</visual>
	</link>
	
	<joint name="base_to_bottom_arm" type="revolute">
		<axis xyz="0 0 1"/>
		<limit effort="1000.0" lower="-1.548" upper="1.548" velocity="0.5"/>
		<origin xyz="0 0 0.65"/>
		<parent link="base_link"/>
		<child link="bottom_arm"/>
	</joint>
	
	
	
	<joint name="bottom_to_top_arm" type="revolute">
		<axis xyz="0 1 0"/>
		<limit effort="1000.0" lower="-1.548" upper="1.548" velocity="0.5"/>
		<origin xyz="0 0 0"/>
		<parent link="bottom_arm"/>
		<child link="top_arm"/>
	</joint>
	
</robot>

